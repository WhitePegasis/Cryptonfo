<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="3dp"
    android:id="@+id/parentCard"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/parentLayout"
        android:background="#FABABA">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC"
            android:id="@+id/cryptoName"
            app:layout_constraintTop_toTopOf="@+id/parentLayout"
            app:layout_constraintLeft_toLeftOf="@+id/parentLayout"
            android:layout_margin="2dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin"
            android:id="@+id/cryptoSymbol"
            app:layout_constraintTop_toBottomOf="@+id/cryptoName"
            app:layout_constraintLeft_toLeftOf="@+id/parentLayout"
            android:layout_marginTop="10dp"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="2dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$123.89"
            android:id="@+id/cryptoValue"
            app:layout_constraintTop_toTopOf="@+id/parentLayout"
            app:layout_constraintRight_toRightOf="@+id/parentLayout"
            android:layout_margin="4dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>